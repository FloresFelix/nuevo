<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fondo02"
    tools:context=".Menu01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/corazon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/corazon" />

            <ImageButton
                android:id="@+id/btn_rutina"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:background="@drawable/rutina"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="30dp"/>
            <ImageButton
                android:id="@+id/btn_flecha_rutina"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/flecha1" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/reloj"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/reloj" />
            <ImageButton
                android:id="@+id/brn_agenda"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:background="@drawable/agenda"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="30dp"
                />
            <ImageButton
                android:id="@+id/btn_flecha_agenda"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/flecha2" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/lapiz"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/lapiz" />

            <ImageButton
                android:id="@+id/btn_oraciones"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:background="@drawable/oraciones"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="30dp"/>
            <ImageButton
                android:id="@+id/btn_flecha_oraciones"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/flecha3" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="168dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo1" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>